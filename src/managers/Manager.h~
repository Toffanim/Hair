#if !defined(MODELMANAGER_H)
/* ========================================================================
   $File: $
   $Date: $
   $Revision: $
   $Creator:  $
   $Notice:  $
   ======================================================================== */

#define MODELMANAGER_H

#include <string>
#include <map>
#include "../mesh/Model.h"

template <typename T>
class Manager
{
public:
    static Manager& getInstance()
    {
        static Manager instance;
        return instance;
    }

    std::map<std::string, T>& getManaged()
    { return( managed ); }

private:
    Manager();
    Manager(Manager const&) = delete;
    void operator=(Manager const&) = delete;
    std::map<std::string, T > managed;
    
};

#endif
